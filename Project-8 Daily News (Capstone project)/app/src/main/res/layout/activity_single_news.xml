<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        tools:context=".ui.SingleNewsActivity">


        <TextView
            android:id="@+id/title_news_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_single"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/imagenotfound" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />


            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/facbutton"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="addFav"
                android:src="@drawable/out" />


            <ImageView
                android:id="@+id/share_whatsapp"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/whatsapp" />


            <ImageView
                android:id="@+id/share_fb"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/facebook" />


            <ImageView
                android:id="@+id/share_insta"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/instagram" />

            <ImageView
                android:id="@+id/share_all"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/sound"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/sound" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="3dp"
                android:onClick="share"
                android:src="@drawable/mute" />


        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:textSize="16dp" />

    </LinearLayout>

</ScrollView>